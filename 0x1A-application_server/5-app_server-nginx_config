# Default server configuration
#

upstream app_server_flaskapi {
    server 0.0.0.0:5000 fail_timeout=0;
}

upstream app_server_flaskapi_even {
    server 0.0.0.0:5001 fail_timeout=0;
}

upstream app_server_api {
    server 0.0.0.0:5003 fail_timeout=0;
}

upstream app_server_web_dynamic {
    server 0.0.0.0:5004 fail_timeout=0;
}

server {
        listen 80 default_server;
        listen [::]:80 default_server;

        # SSL configuration
        #
        # listen 443 ssl default_server;
        # listen [::]:443 ssl default_server;
        #
        # Note: You should disable gzip for SSL traffic.
        # See: https://bugs.debian.org/773332
        #
        # Read up on ssl_ciphers to ensure a secure configuration.
        # See: https://bugs.debian.org/765782
        #
        # Self signed certs generated by the ssl-cert package
        # Don't use them in a production server!
        #
        # include snippets/snakeoil.conf;

        location / {
			root /var/www/html;
			index index.html;
		}
		
		location /hbnb_static/ {
			alias "/data/web_static/current/";
			autoindex off;
		}
		
		# Add index.php to the list if you are using PHP
        index index.html index.htm index.nginx-debian.html;


		# Serve /airbnb-onepage/ route from AirBnB_clone_v2
        location /airbnb-onepage/ {
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header Host $http_host;
			proxy_redirect off;
			proxy_pass http://app_server_flaskapi;
		}
		

		# Serve /airbnb-dynamic/number_odd_or_even/ route from AirBnB_clone_v2
		location ~ ^/airbnb-dynamic/number_odd_or_even/(\d+)$ {
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header Host $http_host;
			proxy_redirect off;
			proxy_pass http://app_server_flaskapi_even;
		}
		
		# Serve api from AirBnB_clone_v2
		location /api/ {
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header Host $http_host;
			proxy_redirect off;
			proxy_pass http://app_server_api;
		}
		
		# Serve web server from AirBnB_clone_v2
		location /2-hbnb/ {
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header Host $http_host;
			proxy_redirect off;
			proxy_pass http://app_server_web_dynamic/2-hbnb;
		}
		

		error_page 404 /404.html;
		location = /404.html {
			root /var/www/html;
		}
		
        server_name 52.205.172.113 www.bustlezee.tech bustlezee.tech;
		
		add_header X-Served-By 176546-web-01;
}
